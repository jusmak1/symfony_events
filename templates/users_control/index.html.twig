{% extends 'base.html.twig' %}

{% block title %}Vartotojų valdymas{% endblock %}

{% block body %}

    <div class="container center_div">
        <div class="table-responsive">
            <table class="table table-striped table-light table-hover">
                <thead class="thead-dark" >
                <tr>
                    <th>Vardas</th>
                    <th>Pavardė</th>
                    <th>Vartotojo vardas</th>
                    <th>El. paštas</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <a href="{{ path('user_delete', { userId: user.id}) }}"
                               onclick="return confirm('Ar tikrai norite pašalinti {{ user.username }}? ')">Pašalinti</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}
